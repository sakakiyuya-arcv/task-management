extends ../../layouts/default.pug

block main 
    h1 Tạo tài khoản thành viên

    .card
        .card-body
            form(action=`${prefixAdmin}/team/create` method="POST")
                div(class="form-group mb-3")
                    label(for="fullName") Tên đầy đủ
                    input(
                        type="text"
                        class="form-control"
                        id="fullName"
                        name="fullName"
                        required
                    )
                
                div(class="form-group mb-3")
                    label(for="email") Email
                    input(
                        type="email"
                        class="form-control"
                        id="email"
                        name="email"
                        required
                    )
                
                div(class="form-group mb-3")
                    label(for="password") Mật khẩu
                    input(
                        type="password"
                        class="form-control"
                        id="password"
                        name="password"
                        required
                    )

                
                button(type="submit" class="btn btn-primary") Tạo tài khoản
