extends ../../layouts/default.pug

block main 
    +alert-success(3000)
    +alert-error(3000)
    
    h1 Thêm dự án mới

    .card
        .card-body
            form(action=`${prefixAdmin}/projects/create` method="POST")
                input(type="hidden" name="returnUrl" value=returnUrl)
                div(class="form-group mb-3")
                    label(for="title") Tiêu đề
                    input(type="text" class="form-control" id="title" name="title" required)

                div(class="form-group mb-3")
                    label(for="description") Mô tả
                    textarea(class="form-control" id="description" name="description" rows="5")

                div(class="form-group mb-3")
                    label(for="due_date") Hạn chót
                    input(
                        type="date" 
                        class="form-control" 
                        id="due_date" 
                        name="due_date"
                    )

                div(class="form-group mb-3")
                    label(for="status") Trạng thái
                    select(class="form-control" id="status" name="status")
                        option(value="in-progress" selected) Đang tiến hành
                        option(value="on-hold") Tạm dừng
                        option(value="completed") Hoàn thành

                button(type="submit" class="btn btn-primary") Thêm mới
