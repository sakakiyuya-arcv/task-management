extends ../../layouts/default.pug

block main 
    +alert-success(3000)
    +alert-error(3000)

    h1 Thành viên nhóm

    .row.mb-3
        .col-6
        .col-6 
            +search(keyword)

    .card.mb-3
        .card-header Danh sách thành viên
        .card-body

            table(
                class="table table-hover table-sm"
                checkbox-multi
            )
                thead
                    tr
                        th(style="width: 5%" class="text-center") STT
                        th(style="width: 3%")
                        th(style="width: 41%") Tên
                        th(style="width: 41%") Email
                        th(style="width: 10%")
                tbody
                    each member, index in members
                        tr
                            td(style="width: 5%" class="text-center") #{index + 1 + (pagination.currentPage - 1) * pagination.limititems}
                            td(style="width: 2%")
                            td(style="width: 41%") 
                                a(href=`/tasks?assigned_to=${member._id}` class="text-decoration-none") #{member.fullName}
                            td(style="width: 41%") #{member.email}
                            td(style="width: 10%" class="text-center") 
                                if member.role=="member"
                                    span(class="badge bg-secondary") MEMBER
                                else 
                                    span(class="badge bg-primary") ADMIN

    +pagination(pagination)

    script(src="/client/js/script.js")
    script(src="/client/js/team.js")
